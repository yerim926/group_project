                <input type="text" class="form-control" id=""
                placeholder="Questionn #4" name="q4" value="<%= survey.q4 %>" required readonly>
              </div>
              <div class="form-group">
                <label for="NameTextField">Answer:</label>
                <input type="text" class="form-control" id="a4"
